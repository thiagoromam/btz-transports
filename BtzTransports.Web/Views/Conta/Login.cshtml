@{
    Layout = "~/Views/Shared/_Layout.Base.cshtml";
    ViewBag.Title = "Login";
}

@section scripts {
    @Scripts.Render("~/bundles/api/conta")
    @Scripts.Render("~/bundles/conta/login")
}

<div class="container body-content">
    <main class="mt-5" ng-controller="LoginController">
        <form ng-submit="logar()">
            <div class="form-group">
                <label>Login</label>
                <input type="text" class="form-control" ng-model="dados.login" required />
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" ng-model="dados.senha" required />
            </div>

            <div class="form-group">
                <input type="checkbox" id="lembrar" ng-model="dados.lembrar" />
                <label for="lembrar">Lembrar</label>
            </div>

            <button class="btn btn-primary mt-2">Entrar</button>
        </form>
    </main>

    @Html.Partial("~/Views/Shared/_Footer.cshtml")
</div>