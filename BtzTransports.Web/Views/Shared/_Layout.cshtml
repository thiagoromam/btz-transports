@{
    Layout = "_Layout.Base.cshtml";
}

@section styles {
    @RenderSection("styles", required: false)
}

@section scripts {
    @RenderSection("scripts", required: false)
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
    <div class="container">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li>@Html.ActionLink("Início", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Usuários", "Index", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Motoristas", "Index", "Motorista", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Veículos", "Index", "Veiculo", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Sair", "Logout", "Conta", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
</nav>
<div class="container body-content">
    <main>
        <h3 class="mb-4">@ViewBag.Title</h3>

        @RenderBody()
    </main>

    @Html.Partial("_Footer")
</div>
