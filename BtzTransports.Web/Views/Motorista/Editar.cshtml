@model int?
@{
    ViewBag.Title = Model != null ? "Editar motorista" : "Novo motorista";
}

@section scripts {
    @Scripts.Render("~/bundles/api/motoristas")
    @Scripts.Render("~/bundles/motorista/editar")
}

<div ng-controller="EditarController" ng-init="carregar(@Model)">
    <form ng-submit="salvar()">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control" ng-model="motorista.nome" maxlength="50" required />
        </div>
        <div class="form-group">
            <label>CPF</label>
            <input type="text" class="form-control" ng-model="motorista.cpf" maxlength="11" required />
        </div>
        <div class="form-group">
            <label>CNH</label>
            <input type="text" class="form-control" ng-model="motorista.cnh" maxlength="10" required />
        </div>
        <div class="form-group">
            <label>CNH</label>
            <input type="date" class="form-control" ng-model="motorista.dataDeNascimento" required />
        </div>
        <div class="form-group">
            <label>Situação</label> <br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" ng-model="motorista.status" id="status_ativo" ng-value="Enum.statusDoMotorista.ativo" />
                <label class="form-check-label" for="status_ativo">Ativo</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" ng-model="motorista.status" id="status_inativo" ng-value="Enum.statusDoMotorista.inativo" />
                <label class="form-check-label" for="status_inativo">Inativo</label>
            </div>
        </div>

        <div class="mt-5">
            <button class="btn btn-primary">Salvar</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
        </div>
    </form>
</div>